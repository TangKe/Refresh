<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="refreshLayoutStyle" format="reference" />
    <attr name="animationRefreshHeaderViewStyle" format="reference" />
    <attr name="refreshableLinearLayoutStyle" format="reference" />

    <declare-styleable name="RefreshLayout">
        <attr name="refreshAxis" format="enum">
            <enum name="vertical" value="1" />
            <enum name="horizontal" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RefreshLayout_Layout">
        <attr name="layout_refresh_role" format="enum">
            <enum name="header" value="1" />
            <enum name="footer" value="2" />
            <enum name="content" value="3" />
        </attr>
        <attr name="android:layout_gravity" />
    </declare-styleable>

    <declare-styleable name="AnimationRefreshView">
        <attr name="pullAnimation" format="reference" />
        <attr name="refreshAnimation" format="reference" />
    </declare-styleable>
</resources>