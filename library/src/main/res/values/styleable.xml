<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="refreshLayoutStyle" format="reference" />
    <attr name="animationRefreshHeaderViewStyle" format="reference" />
    <attr name="textAnimationRefreshHeaderViewStyle" format="reference" />

    <declare-styleable name="RefreshLayout"></declare-styleable>

    <declare-styleable name="RefreshLayout_LayoutParams">
        <attr name="layout_role" format="enum">
            <enum name="header" value="1" />
            <enum name="footer" value="2" />
            <enum name="content" value="3" />
        </attr>
        <attr name="android:layout_gravity" />
    </declare-styleable>

    <declare-styleable name="AnimationRefreshView">
        <attr name="pullAnimation" format="reference" />
        <attr name="refreshAnimation" format="reference" />
    </declare-styleable>
    <declare-styleable name="TextAnimationRefreshView">
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:text" />
        <attr name="android:singleLine" />
        <attr name="pullAnimation" />
        <attr name="refreshAnimation" />
    </declare-styleable>
</resources>